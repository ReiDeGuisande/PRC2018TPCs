extends layout

block content
    .w3-container.w3-center
        .w3-card-4.w3-center
            header.w3-header.w3-light-grey
                h1.w3-center 
                    b WebApp
            .w3-container
                .w3-row
                    .w3-col.m6.l3
                        h2
                            b GraphDB Repositories
                    .w3-col.m6.m4    
                        table.w3-center.w3-table-all
                            tr
                                th Repositories
                                th Size
                            each r in repositories
                                tr
                                    td
                                        b
                                            a(href='/input/' + r.id)= r.id
                                    td= r.size
                br
            footer.w3-container.w3-lightheader.w3-header.w3-light-grey
                address Gerado por WebApp
        
  
